<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="volunteeride.com.volunteerideandroidapp.activity.RideDetailsViewActivity"
    tools:showIn="@layout/activity_ride_details_view">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ride Status: "
        android:id="@+id/textLblStatus"
        android:textColor="#010101"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ride Pick Up Time: "
        android:id="@+id/textLblPckUpTime"
        android:textColor="#010101"
        android:layout_below="@+id/textLblStatus"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ride Pick Up Location: "
        android:id="@+id/textLblPckUpLoc"
        android:textColor="#010101"
        android:layout_below="@+id/textLblPckUpTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textStatus"
        android:layout_toRightOf="@+id/textLblPckUpTime"
        android:layout_toEndOf="@+id/textLblPckUpTime"
        android:textColor="#010101"
        android:gravity="right"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/textLblStatus"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textPckUpTime"
        android:textColor="#010101"
        android:gravity="right"
        android:textSize="16sp"
        android:layout_above="@+id/textLblPckUpLoc"
        android:layout_toRightOf="@+id/textLblPckUpLoc"
        android:layout_toEndOf="@+id/textLblPckUpLoc"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/textLblPckUpTime" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textPckUpLoc"
        android:textColor="#010101"
        android:gravity="right"
        android:layout_alignTop="@+id/textLblPckUpLoc"
        android:layout_toRightOf="@+id/textLblPckUpLoc"
        android:layout_toEndOf="@+id/textLblPckUpLoc"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp" />


</RelativeLayout>
